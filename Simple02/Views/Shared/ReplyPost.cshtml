@model Simple02.Models.FunctionViewModels.InOneDcsnViewModel


 @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/jquery-1.7.1.min.js")
        
}


<div id="canrf">
    @if (ViewBag.pkp == "Show")
    {
        <div class="col-md-5">
            @Html.Label("Reply :")
        </div>
        using (Html.BeginForm("Post", "Enquirer", new { ParentId = ViewBag.ParentId, AnswerId = ViewBag.AnswerId, CurrentPage=ViewBag.CurrentPage }, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h4>@ViewBag.massage</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-md-10">
                @Html.TextAreaFor(m => m.mycurrentpost.content, new { @class = "form-control", rows = "2" })
            </div>
            <div class="col-md-10">
                <input type="file" id=0 name="uploads" class="input-group-sm col-md-offset-0 col-md-8" />
                <div id="MoreFileErs" class="col-md-offset-0">
                    @Html.Raw(Ajax.ActionLink("[replacethis]", "MoreFileEntries", "Home", new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "MoreFileErs" }).ToHtmlString().Replace("[replacethis]", "<img src=\"/Icons/AddAthmt.png\" width=20 height=20/>"))
                </div>
            </div>
            <div class="col-md-offset-0 col-md-10">
                @Ajax.ActionLink("Pack Up", "ReplyPost", new { PackUp = "Show", ParentId = 0, CurrentPage= ViewBag.CurrentPage }, new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "canrf" }, null)|
                <input type="submit" value="Post" name="btnSubmit" class="btn btn-link" />|
                <input type="reset" value="Clear" name="btnSubmit" class="btn btn-link" />
            </div>
        }

    }
</div>



