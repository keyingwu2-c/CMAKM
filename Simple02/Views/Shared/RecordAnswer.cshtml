@model Simple02.Models.ConsultViewModel   


 @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/jquery-1.7.1.min.js")
        
}

@{ List<SelectListItem> BRlts = new List<SelectListItem>();
            BRlts.Add(new SelectListItem
            {
                Text = "Has Deal",
                Value = "Succeed",
            });
            BRlts.Add(new SelectListItem
            {
                Text = "No Deal",
                Value = "Fail/No Result"
            });}

    <div class="col-md-5">
        @Html.Label("Answer To Customer")<text class="text-danger">*</text>
    </div>
    <div class="col-md-10">
        @Html.TextAreaFor(m => m.techEqry.AnswerToCustomer, new { @class = "form-control", rows = "5", required = "required" })
    </div>
    <div class="col-md-5">
        @Html.Label("Business Result")<text class="text-danger">*</text>
    </div>
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.techEqry.BssResult, BRlts, new { @class = "form-control" })
    </div>
    <div class="col-md-10">
        @Ajax.ActionLink("Add Answer", "RecordAnswer", new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ShowPartial" })
        &nbsp;|&nbsp;
        @Ajax.ActionLink("Consult Experts", "CallExperts", new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ShowPartial" })
        &nbsp;|&nbsp;
        @Ajax.ActionLink("Consult TechKnowTeam", "ToTechKnowTeam", new AjaxOptions() { InsertionMode = InsertionMode.Replace, UpdateTargetId = "ShowPartial" })
    </div>
    <div class="col-md-offset-0 col-md-10">
        <p>&nbsp;</p>
        <form>
            <input type="submit" value="Store" name="btnSubmit" formaction="Share" formmethod="post" class="btn btn-default" />
            <input type="reset" value="Clear" name="btnClear" class="btn btn-default" />
        </form>
    </div>
    
    
